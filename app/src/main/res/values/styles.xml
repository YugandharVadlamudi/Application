<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="slide_icon_height_width">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
    </style>
    <style name="tv_list_item_styles">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
<style name="dialog_animation">
    <item name="android:windowEnterAnimation">@anim/dialog_start_animation</item>
    <item name="android:windowExitAnimation">@anim/dialog_end_anim</item>
</style>

    <style name="tv_login_style">
        <item name="android:textSize">40sp</item>
        </style>
</resources>
